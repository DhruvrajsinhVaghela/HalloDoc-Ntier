            }
            cancel.classList.remove('d-none');
        } else {
            this.setAttribute('data-text', 'edit');
            this.innerText = 'Edit';
            cancel.classList.add('d-none');
        }
    })

    document.getElementById("Cancle1").addEventListener('click', function (event) {
        const btntext = document.getElementById('edit1');
        var read = document.getElementsByClassName('read');

        if (btntext.getAttribute('data-text') == 'save') {
            this.classList.add('d-none');
            btntext.innerText = 'Edit';
            for (var i = 0; i < read.length; i++) {
                read[i].setAttribute('readonly', '');
            }
        }
        else {
            console.log("else");
        }
    })

    function checkEmailExists() {
        var email1 = document.getElementById('Email1').value;
        var email2 = document.getElementById('Email2').value;
        if (email1 !== email2) {
            alert('Email and confirm Email is not same');
        }
    }

    function SaveAdminData() {
        var saveBtn = document.getElementById('edit');
        var saveBtn1 = document.getElementById('edit1');
        if (saveBtn.getAttribute('data-text') == 'save') {
            saveBtn.setAttribute('type', 'submit');
            saveBtn.click;
        }
        else if (saveBtn1.getAttribute('data-text') == 'save') {
            saveBtn1.setAttribute('type', 'submit');
            saveBtn1.click;
        }
    }


</script>