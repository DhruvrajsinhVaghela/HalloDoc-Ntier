@model HalloDoc.DbEntity.ViewModel.AdminProfileVM
<div class="border-white rounded-3 border mt-3 mb-5 shadow-lg p-2 container w-75">
    <h3>Account Information</h3>
    <form asp-action="AdminProfilePwChange" method="post">
        <div class="row mt-5 ">
            <div class="col-lg-6 col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" asp-for=@Model.UserName class="form-control" id="floatingInput" mailto:placeholder="name@example.com" readonly>
                    <label for="floatingInput">User Name</label>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" asp-for=@Model.Password class="form-control" id="floatingInput" mailto:placeholder="name@example.com">
                    <label for="floatingInput">Password</label>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 ">
                <div class="form-floating mb-3">
                    <input type="text" asp-for="@Model.Status" class="form-control" id="floatingInput" mailto:placeholder="name@example.com" value="Active" readonly>
                    <label for="floatingInput">Status</label>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="form-floating mb-3 phone-code">
                    <input type="text" asp-for="@Model.Roll" class="form-control phone-input phone" id="phone" readonly>
                    <label for="floatingInput">Roll</label>
                </div>
            </div>
        </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-outline-info py-1 py-2 rounded">Reset Password</button>
    </div>
    </form>
    <form class="form" asp-action="EditAdminProfile" asp-route-id="@Model.AdminId" method="post">
        <fieldset id="field">
            <div class="row mt-5 ">
                <div class="col-lg-6 col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" asp-for=@Model.FirstName class="form-control read" id="floatingInput" readonly>
                        <label for="floatingInput">First Name</label>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" asp-for=@Model.LastName class="form-control read" id="floatingInput0" readonly>
                        <label for="floatingInput">Last Name</label>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 ">
                    <div class="form-floating mb-3">
                        <input class="form-control read" asp-for=@Model.Email id="Email1" readonly>
                        <label for="floatingInput">Email</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="form-floating mb-3">
                        <input onblur="checkEmailExists()" type="email" class="form-control read" id="Email2" readonly>
                        <label for="floatingInput">Confirm Email</label>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="form-floating mb-3 phone-code">
                        <input type="tel" asp-for=@Model.PhoneNo class="form-control phone-input phone read" id="phone" readonly>
                        <label for="floatingInput">Phone Number</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    @if (Model.RegionList != null)
                    {
                        @foreach (var reg in Model.RegionList)
                        {
                            @if (Model.AdminRegList.Any(x => x.RegionId == reg.RegionId))
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input checkbox" id="check" type="checkbox" name="SelectedRegions" value="@reg.RegionId" checked>
                                    <label class="form-check-label text6" for="inlineCheckbox1">@reg.Name</label>
                                </div>
                            }
                            else
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input checkbox" type="checkbox" name="SelectedRegions" value="@reg.RegionId">
                                    <label class="form-check-label text6" for="inlineCheckbox1">@reg.Name</label>
                                </div>
                            }
                        }

                    }
                </div>


            </div>
        </fieldset>
        <div class="btns  d-flex justify-content-end my-3">
            <button id="edit" type="button" data-text="edit" class="btn border-info rounded-2" onclick="SaveAdminData()">Edit</button>
            <button id="Cancle" type="button" class="btn border-info rounded-2 d-none ms-3">Cancle</button>
        </div>
    </form>
