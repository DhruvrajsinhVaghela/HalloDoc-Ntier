</div>





<script>
    document.getElementById("edit").addEventListener('click', function (event) {
        var cancel = document.getElementById('Cancle');
        var read = document.getElementsByClassName('read');
        const btntext = this.getAttribute('data-text');
        if (btntext == "edit") {
            this.setAttribute('data-text', 'save');
            this.innerText = 'Save';
            for (var i = 0; i < read.length; i++) {
                read[i].removeAttribute('readonly');
            }
            cancel.classList.remove('d-none');
        } else {
            this.setAttribute('data-text', 'edit');
            this.innerText = 'Edit';
            cancel.classList.add('d-none');
        }
    })

    document.getElementById("Cancle").addEventListener('click', function (event) {
        const btntext = document.getElementById('edit');
        var read = document.getElementsByClassName('read');

        if (btntext.getAttribute('data-text') == 'save') {
            this.classList.add('d-none');
            btntext.innerText = 'Edit';
            for (var i = 0; i < read.length; i++) {
                read[i].setAttribute('readonly', '');
            }
        }
        else {
            console.log("else");
        }
    })

    document.getElementById("edit1").addEventListener('click', function (event) {
        var cancel = document.getElementById('Cancle1');
        const btntext = this.getAttribute('data-text');
