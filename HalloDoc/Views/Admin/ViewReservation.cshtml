@model HalloDoc.DbEntity.ViewModel.ViewCaseVM
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_layoutAdmin";
    ViewBag.cssLink = "AdminDashboard.css";
}
<style>
    .phone-code, .phone-input {
        height: calc(3.5rem + calc(var(--bs-border-width) * 2)) !important;
    }
</style>
<div>
  
    <partial name="_AdminHeaderDashboard" />
    <form asp-action="PatientInfoForm" class="form" enctype="multipart/form-data">
        <div class="container-fluid ">

            <div class="">
                <div class="row main-row  d-flex justify-content-center ">

                    <div class="col-lg-8  main-column-1">
                        <div class="d-flex justify-content-between my-4">
                            <div class="d-flex align-items-end ">
                                <h5 class="me-2">
                                    View Reservation
                                </h5>
                                @if(Model.RequestType==1)
                                    {
                                    <div class="btn border rounded-pill bg-success px-2 text-dark">Patient</div>
                                    }
                                    else if(Model.RequestType==2)
                                    {
                                    <div class="btn border rounded-pill bg-warning p-1 text-dark">Family/Friend</div>

                                    }
                                    else if (Model.RequestType == 3)
                                    {
                                    <div class="btn border rounded-pill bg-info p-1 text-dark">Concierge</div>

                                    }
                                    else if (Model.RequestType == 4)
                                    {
                                    <div class="btn border rounded-pill bg-danger p-1 text-dark">Business</div>

                                    }
                                    else
                                    {
                                        <span>(No Data)</span>
                                    }
                                
                            </div>
                            <a>
                                <button type="button" class="btn border-info rounded-3 btn-outline-info">
                                  &lt; Back
                                </button>
                            </a>

                        </div>
                        <div class="shadow-lg container border rounded-3 border-white mb-5" id="main_box">
                            <div class="row">

                                <p class="h4 mt-4">patient information</p>

                                <p>Confirmation number</p>
                                <p class="text-info h6">@Model.ConfNO</p>

                                <div class="form-floating mb-3">
                                    <textarea class="form-control" asp-for="Notes" placeholder="Leave a comment here"
                                              id="floatingTextarea2" style="height: 100px"></textarea>
                                    <!-- give margin left 1 rem in css to label -->
                                    <label class="ms-2  " for="floatingTextarea2">
                                        Enter Brief Details Of
                                        Symptoms
                                    </label>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3 col-lg-6">
                                    <input type="text" asp-for="@Model.FirstName" class="form-control" id="floatingInput" placeholder="First Name">
                                    <label asp-for="FirstName" class="ms-2 " for="floatingInput"></label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-floating col-lg-6 mb-3">
                                    <input type="text" asp-for="@Model.LastName" class="form-control" id="floatingPassword"
                                           placeholder="Last Name">
                                    <label asp-for="LastName" class="ms-2 " for="floatingPassword">Last Name</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-floating col-lg-6">
                                    <input type="date" class="form-control" id="floatingPassword"
                                           placeholder="Last Name" asp-for="@Model.DateOfBirth"
                                           asp-format="{0:yyyy-MM-dd}">
                                    <label class="ms-2 text-secondary" for="floatingPassword">
                                        Date Of
                                        Birth
                                    </label>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                                </div>
                                <div class="form-floating col-lg-6  phone-code mb-3 ">
                                    <input type="tel" asp-for="@Model.PhoneNumber" class="form-control phone-input phone" id="phone">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-floating col-lg-6 mb-3">
                                    <input type="email" asp-for="@Model.Email" onblur="fetch_email()" class="form-control" id="email" placeholder="Email">
                                    <label class="ms-2" asp-for="Email" for="floatingInput" id="username-input">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="row">
                                <p class="h4 mt-4">Location Information</p>
                                <div class="form-floating col-lg-6 mb-3">
                                    <input type="text" asp-for="@Model.Region" class="form-control" id="floatingInput" placeholder="Region">
                                    <label asp-for="Region" class="ms-2 " for="floatingInput" id="username-input">Region</label>

                                </div>
                                <div class="form-floating col-lg-6 mb-3">
                                    <input type="text" asp-for="@Model.Address" class="form-control" id="floatingInput" placeholder="address">
                                    <label asp-for="Address" class="ms-2 " for="floatingInput" id="username-input">address</label>

                                </div>
                               
                                <div class="form-floating col-lg-6 ">
                                    <input type="text" asp-for="@Model.Room" class="form-control" id="floatingInput" placeholder="Room#/ suite (Optional)">
                                    <label class="ms-2" asp-for="@Model.Room" for="floatingInput" id="username-input">
                                        Room # /
                                        Suite(Optional)
                                    </label>

                                </div> 
                                <div class="d-flex justify-content-end my-2">
                                        <button class="bg-info border rounded-3 p-2 me-3">Assign</button>
                                        <button class="bg-info border rounded-3 p-2 me-3">View Notes</button>
                                        <button class="bg-danger border rounded-3 p-2">Cancel</button>
                                </div>
                                
                            </div>
              

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </form>
    </div>
    <script>
    const load = () => {
        console.log("hello");
        const phoneInputField = document.getElementsByClassName("phone");
        for (let i = 0; i < phoneInputField.length; ++i) {
            const phoneInput = window.intlTelInput(phoneInputField[i], {
                utilsScript:
                    "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
            });
        }


        
    }
    
    var light = 1;
    function DarkMode() {
        if (light == 1) {
            document.body.setAttribute('data-bs-theme', 'dark');

            light = 0;
        }
        else {
            document.body.setAttribute('data-bs-theme', 'light');


            light = 1;
        }
    }

        const getFileData = (myFile) => {
            names = myFile.files;
            let master = "";
            for (i = 0; i < names.length; i++) {
                master = master + "  " + names[i].name;
            }
            document.getElementById("form-label").innerHTML = `${master}`;
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Find all elements with the class "go-back-button"
            var goBackButtons = document.querySelectorAll('.go-back-button');

            // Attach click event listener to each button
            goBackButtons.forEach(function (button) {
                button.addEventListener('click', function () {
                    window.history.back();
                });
            });
        });


   


    </script>
