@model HalloDoc.DbEntity.ViewModel.ContactProviderVM

<div class="modal fade" id=ContactProvider tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-route-id="@Model.ProviderId" asp-action="SendProvider" method="post">
                <div class="modal-header bg-info">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Contact Your Provider</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Block"></button>
                </div>
                <div class="modal-body">
                    <p>Choose communication to send message</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ContactType" id="messageRadio" value="SMS" checked>
                        <label class="form-check-label" for="messageRadio">SMS</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ContactType" id="emailRadio" value="Email">
                        <label class="form-check-label" for="emailRadio">Email</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="ContactType" id="bothRadio" value="Both">
                        <label class="form-check-label" for="bothRadio">Both</label>
                    </div>
                    <div class="my-3">
                        <textarea class="form-control" asp-for="Message" id="exampleFormControlTextarea1" rows="3" placeholder="Message" required>

                        </textarea>
                    </div>

                </div>
                <div class="d-flex justify-content-end mx-3 mb-2">
                    <a><button type="submit" class="btn btn-outline-info me-2">Send</button></a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>