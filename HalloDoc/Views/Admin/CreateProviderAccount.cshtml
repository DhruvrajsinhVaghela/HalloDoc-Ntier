                    <div class="w-50">
                        <label class="  border-info border rounded d-flex justify-content-between">
                            <input type="file" asp-for="ContractorAgreement" name="ContractorAgreement" id="FileCheck1" onchange="getFileDataProvider1(this)" multiple="multiple" style="display: none;" accept=".jpg,.jpeg,.png">
                            <div class="upload-btn-provider p-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                     fill="currentColor" class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                          d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
