                                </svg>
                                Upload
                            </div>
                        </label>
                    </div>
                    @* <input name="Photo" asp-for="Photo" value="@Model.Photo" multiple="multiple" onchange="getFileData(this)" type="file" id="inputField" style="display:none; width: 100%;"> *@
                </div>

                <div class="col-lg-12 col-margin">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Admin Notes" asp-for="AdminNotes"
                                  id="adminnote" style="height:100px"></textarea>
                        <label for="adminnote">Admin Notes</label>
                    </div>
                </div>
            </div>

            <div class="row my-3 border-top border-bottom py-2">
                <h4 class="fw-bold">Onboarding</h4>

                <div class="d-flex justify-content-between align-items-center col-margin">
                    <input type="checkbox" id="CheckBox1" />
                    <span class="fs-5"> Independent Contractor Agreement</span>
