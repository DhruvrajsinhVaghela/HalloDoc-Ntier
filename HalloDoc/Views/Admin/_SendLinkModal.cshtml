 @model HalloDoc.DbEntity.ViewModel.SendMailVM
<div class="modal fade" id=Send tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
             <form asp-action="UpdateAssignCase" method="post"> 
                <div class="modal-header bg-info">
                    <h1 class="modal-title fs-5 text-white" id="exampleModalLabel">Send mail to patient for submitting request</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                <div class="form-floating mb-1">
                    <input type="text" asp-for="FirstName" class="form-control" id="floatingInput" placeholder="First Name">
                    <label asp-for="FirstName" class="ms-2 " for="floatingInput">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input type="text" asp-for="LastName" class="form-control" id="floatingInput" placeholder="Last Name">
                    <label asp-for="LastName" class="ms-2 " for="floatingInput">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating  phone-code mb-1 ">
                    <input type="tel" asp-for="PhoneNo" class="form-control phone-input phone" id="phone">
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="form-floating mb-1">
                    <input type="email" asp-for="Email" onblur="fetch_email()" class="form-control" id="email" placeholder="Email">
                    <label class="ms-2" asp-for="Email" for="floatingInput" id="username-input">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                </div>
                <div class="d-flex justify-content-end mx-3 mb-2">
                    <a><button type="submit" class="btn btn-outline-info me-2">Send</button></a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form> 
        </div>
    </div>
</div>
