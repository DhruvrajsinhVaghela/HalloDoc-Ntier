@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor;
@model List<HalloDoc.DbEntity.ViewModel.PatientDashboardVM>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HalloDoc</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="@ViewBag.cssLink" asp-append-version="true" />
</head>
<body onload="load()">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid d-flex justify-content-between">


            <div class="d-block d-sm-none">
                <button type="button" class="border-1 rounded-2 bg-transparent border-info" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
                    </svg>
                </button>

            </div>
            <img class="logo-img-1" src="\images\Fig56._Patient_site_1.png" alt="">

            <div class="d-flex align-items-center justify-content-center ">
                <div class="d-none d-sm-block">
                    <p class="mt-1 me-3">
                        welcome
                        @if (@Model.FirstOrDefault().user == null)
                        {
                            <strong>@Model.FirstOrDefault().View.user.FirstName</strong>
                        }
                        else
                        {
                            <strong>@Model.FirstOrDefault().user.FirstName</strong>
                        }
                    </p>
                </div>@* @ViewData["NavName"] *@
                <div class="me-3">
                    <a asp-controller="Login" asp-action="PatientLogout"
                       class="border border-info px-2 py-1 rounded-2 text-info">
                        <span class="d-none d-sm-inline-block ">Logout</span>
                        <span class="d-inline-block d-sm-none">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                            </svg>
                        </span>
                    </a>

                </div>
                <div>
                    <button id="darkmode-btn" onclick="myFunction()">
                        <img class="darkmode-img text-info" src="\images\moon.svg" alt="">
                    </button>
                </div>


            </div>
        </div>
    </nav>

    @RenderBody()

    <div id="footer">
        <div class="h-25">
        </div>
        <div class="">
            <a href="" class="text-decoration-none " id="terms1"> Terms of Conditions </a>
            <span class="vr mx-3" id="vr1"></span>
            <a href="" class="text-decoration-none" id="terms2">Privacy Policy</a>

        </div>
    </div>

    <script src="~/js/@ViewBag.jsLink" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
